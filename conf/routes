# For main client app views
GET           /                    controllers.HomeController.index()

# Task Controller
GET           /api/task            controllers.TaskController.find()
POST          /api/task            controllers.TaskController.add()
PUT           /api/task            controllers.TaskController.modify()
DELETE        /api/task            controllers.TaskController.delete()
POST           /api/task/filtered   controllers.TaskController.findTaskFiltered()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.at(path="/public", file)

